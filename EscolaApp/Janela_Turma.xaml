<Window x:Class="EscolaApp.Janela_Turma"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscolaApp"
        mc:Ignorable="d"
        Title="Janela_Turma" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="4,10,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,10,0,0" Text="CURSO" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="142,10,0,0" Text="Turma" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Name="txtid" HorizontalAlignment="Left" Margin="4,31,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.479,-0.026"/>
        <TextBox Name="txtCurso"  HorizontalAlignment="Left" Margin="59,31,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="86"/>
        <TextBox x:Name="txtTurma" HorizontalAlignment="Left" Margin="150,31,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="4,54,0,0" Text="Ano Letivo" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox Name="txtAno" HorizontalAlignment="Left" Margin="4,74,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="74"/>
        <Button Click="InserirClick" Content="Inserir" HorizontalAlignment="Left" Margin="94,72,0,0" VerticalAlignment="Top"/>
        <Button Click="ListarClick" Content="Listar" HorizontalAlignment="Left" Margin="142,72,0,0" VerticalAlignment="Top"/>
        <Button Click="AtualizarClick" Content="Atualizar" HorizontalAlignment="Left" Margin="185,72,0,0" VerticalAlignment="Top"/>
        <Button Click="ExcluirClick" Content="Excluir" HorizontalAlignment="Left" Margin="247,72,0,0" VerticalAlignment="Top"/>
        <ListBox Name="listTurmas" Margin="10,97,10,10" SelectionChanged="listTurmas_SelectionChanged"/>

    </Grid>
</Window>
